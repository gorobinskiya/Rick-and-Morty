<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="186dp"
        android:layout_height="239dp"
        android:layout_margin="20dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026">

        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="238dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/char_details_image"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                app:srcCompat="@drawable/ricksanchez"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/char_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/rick_sanchez"
                android:textColor="#43A047"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/char_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/male"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/char_species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:shadowColor="#4CAF50"
                android:text="@string/human"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/char_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/alive"
                android:textColor="#2E7D32" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>